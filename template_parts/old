 <!-- Bootstraps Framework v4.31 -->
    <!-- https://github.com/twbs/bootstrap -->
    <?php function fototechnik_blog_bootstraps() {
        /* Mein Theme Stylesheet (Style.css) */
         wp_enqueue_style('fototechnikblog-stylesheet', get_stylesheet_uri(), array( 'bootstrap' ), '1.0.0'); 
        /* Bootstrap CSS */
        wp_enqueue_style( 'bootstrap', get_template_directory_uri() . '/assets/css/bootstrap.min.css', array(),'4.3.1');

        /* Custom_nachbar_style CSS */
        wp_enqueue_style( 'custom_navbar_style', get_template_directory_uri() . '/assets/css/custom_navbar_style.css', array(),'1.0');

        /* Bootstrap JS */
        wp_enqueue_script( 'bootstrap', get_template_directory_uri() . '/assets/js/bootstrap.min.js', array( 'jquery' ),'4.3.1', true);

       /* wp_enqueue_script( 'head-blog-theme-js', get_template_directory_uri() . '/assets/js/customscript.js', array( 'jquery' ), '1.0.9', true ); */
    }
    add_action('wp_enqueue_scripts','fototechnik_blog_bootstraps'); ?>

    <!-- Navigations Men端 "Bootstrap Nav Walker"-->
    <!-- https://github.com/wp-bootstrap/wp-bootstrap-navwalker -->
    <?php function fototechnik_blog_register_navwalker(){
	    require_once get_template_directory() . '/assets/php/class-wp-bootstrap-navwalker.php';
    }
    add_action( 'after_setup_theme', 'fototechnik_blog_register_navwalker' );?>

    <!-- Die Men端 Option wird in diesen Theme hinzugef端gt -->
    <?php register_nav_menus( array(
        'main_navigation' => __( 'Hauptmen端', 'THEMENAME' ),
    ) ); ?>
